<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:actionBarStyle">@style/AppTheme.MyActionBar</item>
        <item name="actionMenuTextColor">@color/icons</item>
        <item name="android:actionMenuTextColor">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="actionMenuTextAppearance">@style/AppTheme.RowStyle1
        </item>
    </style>


    <style name="AppTheme.RowStyle1" parent="Base.TextAppearance.AppCompat.Menu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:divider">#BDBDBD</item>
    </style>

    <style name="AppTheme.MyActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="AppTheme.MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.MyActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.MyActionBar.MenuTextStyle
        </item>
    </style>

    <style name="AppTheme.MyActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!-- Used for the background -->
        <item name="android:background">@color/icons</item>
        <item name="android:textSize">17sp</item>
    </style>


</resources>
